<div class="m-0 p-0 min-h-screen bg-green-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="mb-6 md:mb-8">
      <%= link_to portfolios_show_path, class: "inline-flex items-center px-4 py-2 text-green-700 bg-white hover:bg-green-50 border-2 border-green-200 rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to My Profile
      <% end %>
    </div>

    <!-- Transaction History Section -->
    <div class="bg-white rounded-2xl border border-green-100 shadow-xl p-6 sm:p-8 mb-8">
      <div class="flex items-center justify-center gap-3 mb-8">
        <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
          <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
          </svg>
        </div>
        <div>
          <h2 class="text-2xl font-bold text-gray-900">Your Transaction History</h2>
          <p class="text-sm text-gray-600 mt-0.5">View all your trading activity</p>
        </div>
      </div>

      <!-- Transaction Table -->
      <% if @transactions.any? %>
        <div class="overflow-x-auto rounded-lg border border-green-100">
          <table class="w-full min-w-[640px] text-sm">
            <thead class="bg-green-50">
              <tr>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Company</th>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Action</th>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Shares</th>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Stock Price</th>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Total Price</th>
                <th class="py-4 px-4 text-left uppercase text-xs font-semibold text-green-700 tracking-wider">Date</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-green-100 bg-white">
              <% @transactions.each do |transaction| %>
                <tr class="hover:bg-green-50 transition-colors duration-200">
                  <td class="py-4 px-4 font-semibold text-gray-900"><%= transaction.company_name %></td>
                  <td class="py-4 px-4">
                    <span class="px-3 py-1.5 text-xs font-bold rounded-lg <%= transaction.action_type.downcase == 'buy' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                      <%= transaction.action_type.capitalize %>
                    </span>
                  </td>
                  <td class="py-4 px-4 font-bold text-gray-900"><%= transaction.shares %></td>
                  <td class="py-4 px-4 font-bold text-green-600">$<%= transaction.stock_price %></td>
                  <td class="py-4 px-4 font-bold text-emerald-600">$<%= transaction.total_price %></td>
                  <td class="py-4 px-4 text-gray-600"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16 bg-green-50 rounded-lg border-2 border-dashed border-green-200">
          <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
            <svg class="w-8 h-8 text-green-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-base font-bold text-gray-900 mb-2">No transactions yet</h3>
          <p class="text-sm text-gray-600 mb-4">Your transaction history will appear here once you start trading.</p>
          <%= link_to intraday_stocks_path, class: "inline-flex items-center px-4 py-2 bg-green-600 text-white rounded-lg font-medium hover:bg-green-700 transition-colors duration-200" do %>
            Start Trading
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>