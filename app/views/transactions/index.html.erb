<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-4">
  <div class="w-full">
    
        <!-- Back Button -->
        <div class="mb-6">
          <%= link_to portfolios_show_path, class: "inline-flex items-center px-4 py-2 text-gray-700 bg-white hover:bg-gray-50 border border-gray-300 rounded-lg font-medium transition-all duration-200 shadow-sm hover:shadow" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
            </svg>
            Back to My Profile
          <% end %>
        </div>

    <!-- Transaction History Card -->
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      
      <!-- Header -->
      <div class="p-8">
        <div class="mb-8">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Your Transaction History</h2>
              <p class="text-gray-600 text-sm">View all your trading activity</p>
            </div>
          </div>
        </div>

        <!-- Transaction Table -->
        <% if @transactions.any? %>
          <div class="overflow-x-auto rounded-xl border border-gray-200">
            <table class="w-full min-w-[640px]">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Company</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Action</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Shares</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Stock Price</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total Price</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Date</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @transactions.each do |transaction| %>
                  <tr class="hover:bg-gray-50 transition-colors duration-150">
                    <td class="px-6 py-4 text-sm font-semibold text-gray-900"><%= transaction.company_name %></td>
                    <td class="px-6 py-4">
                      <span class="px-3 py-1.5 text-xs font-bold rounded-lg <%= transaction.action_type.downcase == 'buy' ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' %>">
                        <%= transaction.action_type.capitalize %>
                      </span>
                    </td>
                    <td class="px-6 py-4 text-sm font-bold text-gray-900"><%= transaction.shares %></td>
                    <td class="px-6 py-4 text-sm font-semibold text-gray-900">$<%= transaction.stock_price %></td>
                    <td class="px-6 py-4 text-sm font-semibold text-gray-900">$<%= transaction.total_price %></td>
                    <td class="px-6 py-4 text-sm text-gray-600"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <!-- Empty State -->
          <div class="text-center py-16 bg-gray-50 rounded-xl border-2 border-dashed border-gray-300">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-lg font-bold text-gray-900 mb-2">No transactions yet</h3>
            <p class="text-sm text-gray-600 mb-4">Your transaction history will appear here once you start trading.</p>
            <%= link_to intraday_stocks_path, class: "inline-flex items-center px-5 py-2.5 bg-blue-600 text-white rounded-lg font-medium hover:bg-blue-700 transition-all shadow-sm hover:shadow" do %>
              Start Trading
            <% end %>
          </div>
        <% end %>
      </div>

      <!-- Footer -->
      <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
        <p class="text-gray-500 text-sm text-center">
          &copy; 2025 Stock Trading App. All rights reserved.
        </p>
      </div>

    </div>
  </div>
</div>
