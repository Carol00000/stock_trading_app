<div class="m-0 p-0 min-h-screen bg-green-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mx-auto">

  
    <% if current_user && current_user.account_status == 'pending' %>
      <div class="mx-4 sm:mx-6 lg:mx-8 mt-4 sm:mt-6 lg:mt-8 bg-yellow-100 border-2 rounded-lg p-6 text-center">
        <p class="text-yellow-800 font-semibold">‚è≥ Your account is awaiting admin approval.</p>
      </div>
    <% else %>
    
    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 mx-4 sm:mx-6 lg:mx-8 mt-4 sm:mt-6 lg:mt-8 p-8 sm:p-10 lg:p-12 bg-white rounded-2xl shadow-xl border border-green-100">

      <!-- My Profile-->
      <div class="mb-4 md:mb-0">
        <div class="flex items-center gap-3 mb-2">
          <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <div>
            <h1 class="text-2xl font-bold text-gray-900 sm:text-3xl">
              Hi <%= current_user.first_name.upcase %>
            </h1>
            <p class="mt-1 text-sm text-gray-600">
              <%= current_user.email %>
            </p>
          </div>
        </div>
      </div>

      <!-- Transaction + Logout Buttons -->
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">

        <!-- Transaction Button -->
        <%= button_to transactions_path, method: :get,
            class: "inline-flex items-center justify-center px-5 py-2.5 border-2 border-green-200 rounded-lg text-sm font-medium text-green-700 bg-green-50 hover:bg-green-100 hover:border-green-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200 w-full sm:w-auto shadow-sm",
            style: "cursor: pointer;" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor">
            <path d="M12 1.25A10.75 10.75 0 002.132 17.574a.75.75 0 001.347-.678 9.25 9.25 0 111.466 2.1.75.75 0 10-.972 1.14A10.75 10.75 0 1012 1.25zM12.75 6a.75.75 0 00-1.5 0v6a.75.75 0 00.348.636l3.25 2a.75.75 0 10.764-1.272l-2.862-1.76V6z"/>
          </svg>
          My Transaction
        <% end %>

        <!-- Logout Button -->
        <%= button_to destroy_user_session_path, method: :delete,
            class: "inline-flex items-center justify-center px-5 py-2.5 border-2 border-red-200 rounded-lg shadow-sm text-sm font-medium bg-red-500 text-white hover:bg-red-600 hover:border-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-all duration-200 w-full sm:w-auto",
            style: "cursor: pointer;" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
          </svg>
          Logout
        <% end %>

      </div>
    </div>

    <!-- Total Shares Owned/Portfolio Value -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 mx-4 sm:mx-6 lg:mx-8 mt-4 sm:mt-6 lg:mt-8 p-8 sm:p-10 lg:p-12 bg-white rounded-2xl shadow-xl border border-green-100">
      <div class="flex flex-col sm:flex-row w-full gap-8 justify-between">

        <!-- Total Shares -->
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
              </svg>
            </div>
            <p class="text-green-700 text-sm font-medium">Total Shares Owned</p>
          </div>
          <p class="text-3xl font-bold text-gray-900 ml-13"><%= @total_shares %></p>
        </div>

        <!-- Portfolio Value -->
        <div class="flex-1">
          <div class="flex items-center gap-3 mb-2">
            <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
            </div>
            <p class="text-emerald-700 text-sm font-medium">Portfolio Value</p>
          </div>
          <p class="text-3xl font-bold text-gray-900 ml-13">
            <%= number_to_currency(@stocks.sum(&:cost_price)) if @stocks.present? %>
          </p>
        </div>

      </div>
    </div>

    
    <!-- Stocks table -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 mx-4 sm:mx-6 lg:mx-8 mt-4 sm:mt-6 lg:mt-8 p-8 sm:p-10 lg:p-12 bg-white rounded-2xl shadow-xl border border-green-100">
      <div class="w-full">
        <div class="flex items-center justify-between mb-6">

          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Your Stock Portfolio</h3>
          </div>
          
          <%= link_to intraday_stocks_path,
              class: "inline-flex items-center justify-center px-5 py-2.5 border-2 border-green-200 rounded-lg shadow-sm text-sm font-medium text-white bg-green-600 hover:bg-green-700 hover:border-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500 transition-all duration-200",
              style: "cursor: pointer;" do %>
            
            <svg class="-ml-1 mr-2 h-5 w-5 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h8m0 0v8m0-8l-8 8-4-4-6 6"/>
            </svg>            
            Trade
          <% end %>

        </div>

        
        <% if @stocks.present? %>
          <div class="overflow-x-auto rounded-lg border border-green-100">
            <table class="w-full">
              <thead class="bg-green-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-green-700 uppercase tracking-wider">Symbol</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-green-700 uppercase tracking-wider">Company Name</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-green-700 uppercase tracking-wider">Total Shares</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-green-700 uppercase tracking-wider">Total Cost</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-green-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-green-100 bg-white">
                <% @stocks.each_with_index do |stock, index| %>
                  <tr class="hover:bg-green-50 transition-colors duration-200">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <div class="flex items-center">
                        <span class="px-3 py-1 text-sm font-bold text-green-700 bg-green-100 rounded-lg"><%= stock.symbol %></span>
                      </div>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= stock.company_name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900"><%= stock.shares %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900"><%= number_to_currency(stock.cost_price) %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <button class="text-green-600 hover:text-green-800 font-medium mr-3 px-3 py-1.5 rounded-lg hover:bg-green-100 transition-all">View</button>
                      <button class="text-emerald-600 hover:text-emerald-800 font-medium px-3 py-1.5 rounded-lg hover:bg-emerald-100 transition-all">Trade</button>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="py-12 text-center bg-green-50 rounded-lg border-2 border-dashed border-green-200">
            <div class="w-16 h-16 bg-green-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <p class="text-gray-600 font-medium">No stocks in your portfolio yet.</p>
            <p class="text-gray-500 text-sm mt-1">Start trading to build your portfolio</p>
          </div>
        <% end %>
      </div>
    </div>




   <% end %>
  </div>
</div>