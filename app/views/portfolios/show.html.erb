<div class="min-h-screen bg-white">
  <div class="w-full overflow-hidden">
    
<% if current_user && current_user.account_status == 'pending' %>
  <div class="m-4 md:m-8 bg-gradient-to-br from-yellow-50 to-amber-50 border-2 border-yellow-300 rounded-2xl p-6 md:p-8 text-center shadow-lg">
    <p class="text-yellow-800 font-semibold mb-6 text-lg md:text-xl">‚è≥ Your account is awaiting admin approval.</p>

    <!-- Demo Notice Box -->
        <div class="bg-blue-50 border border-blue-200 rounded-lg p-4 md:p-5 mb-6 max-w-2xl mx-auto">
          
      <!-- Info Header -->
      <div class="flex flex-col items-center gap-2 mb-5">
        <svg class="w-5 h-5 text-blue-600 mb-1" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd" />
        </svg>
        
        <div class="text-center space-y-3">
          <p class="text-blue-800 text-sm font-bold">Demo Version</p>
          <p class="text-red-600 text-xs">Email functionality disabled in demo for security purposes.</p>
          <p class="text-gray-700 text-sm font-medium pt-2">Use Admin Acount to manually accept your created account</p>
        </div>
      </div>

      <!-- Admin Account -->
      <div class="bg-white rounded-lg p-5 mb-4 border border-gray-200 max-w-md mx-auto shadow-sm">
        <div class="flex items-center justify-center gap-2 mb-4">
          <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
            </svg>
          </div>
          <span class="font-semibold text-gray-800 text-base">Admin Account</span>
        </div>
      <div class="text-center space-y-2">
        <p class="text-sm text-gray-700"><code class="bg-gray-100 px-3 py-1.5 rounded text-sm font-medium block">admin@demo.com</code></p>
        <p class="text-sm text-gray-700"><code class="bg-gray-100 px-3 py-1.5 rounded text-sm font-medium block">password: admin123</code></p>
      </div>
      </div>

      <!-- Separator Text -->
      <div class="text-center mb-4">
        <p class="text-gray-600 text-xs">
          Or login as Demo User to start trading immediately. üöÄ
        </p>
      </div>

      <!-- User Account -->
      <div class="bg-white rounded-lg p-5 border border-gray-200 max-w-md mx-auto shadow-sm">
        <div class="flex items-center justify-center gap-2 mb-4">
          <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center flex-shrink-0">
            <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </div>
          <span class="font-semibold text-gray-800 text-base">Demo User</span>
        </div>
        <div class="text-center space-y-2">
      <p class="text-sm text-gray-700"><code class="bg-gray-100 px-3 py-1.5 rounded text-sm font-medium block">demo@demo.com</code></p>
      <p class="text-sm text-gray-700"><code class="bg-gray-100 px-3 py-1.5 rounded text-sm font-medium block">password: demo123</code></p>
        </div>
      </div>
    
      <%= button_to "Log in", destroy_user_session_path, method: :delete,
          class: "mt-6 px-6 py-2.5 bg-blue-600 text-white font-medium rounded-lg hover:bg-blue-700 transition-all shadow-sm hover:shadow inline-block",
          data: { turbo: false } %>

    </div>
  <% else %>
  
    <!-- User Dashboard Content -->
    <div class="p-8">
      
      <!-- Dashboard Header with User Profile and Buttons -->
      <div class="mb-8">
        <div class="flex items-center justify-between mb-3">
          <div class="flex items-center gap-3">
            <div class="w-12 h-12 bg-green-100 rounded-xl flex items-center justify-center">
              <svg class="w-6 h-6 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Hi <%= current_user.first_name.upcase %></h2>
              <p class="text-gray-600 text-sm"><%= current_user.email %></p>
            </div>
          </div>
          
          <!-- Action Buttons -->
          <div class="flex items-center gap-3">
            <%= button_to transactions_path, method: :get,
                class: "px-5 py-2.5 bg-green-500 text-white font-medium rounded-lg hover:bg-green-600 transition-all shadow-sm hover:shadow",
                style: "cursor: pointer;" do %>
              My Transactions
            <% end %>
            
            <%= button_to destroy_user_session_path, method: :delete,
                class: "px-5 py-2.5 bg-red-500 text-white font-medium rounded-lg hover:bg-red-600 transition-all shadow-sm hover:shadow",
                style: "cursor: pointer;" do %>
              Logout
            <% end %>
          </div>
        </div>
      </div>

      <!-- Portfolio Stats Grid -->
      <div class="mb-8">
        <div class="grid grid-cols-2 gap-6">
          
          <!-- Total Shares Card -->
          <div class="bg-gradient-to-br from-green-50 to-green-100 rounded-xl p-6 border border-green-200">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center border border-green-200">
                <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
                </svg>
              </div>
              <p class="text-green-700 text-sm font-semibold">Total Shares Owned</p>
            </div>
            <p class="text-3xl font-bold text-gray-900"><%= @total_shares %></p>
          </div>

          <!-- Portfolio Value Card -->
          <div class="bg-gradient-to-br from-emerald-50 to-emerald-100 rounded-xl p-6 border border-emerald-200">
            <div class="flex items-center gap-3 mb-3">
              <div class="w-10 h-10 bg-emerald-100 rounded-lg flex items-center justify-center border border-emerald-200">
                <svg class="w-5 h-5 text-emerald-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8c-1.657 0-3 .895-3 2s1.343 2 3 2 3 .895 3 2-1.343 2-3 2m0-8c1.11 0 2.08.402 2.599 1M12 8V7m0 1v8m0 0v1m0-1c-1.11 0-2.08-.402-2.599-1M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
              </div>
              <p class="text-emerald-700 text-sm font-semibold">Portfolio Value</p>
            </div>
            <p class="text-3xl font-bold text-gray-900">
              <%= number_to_currency(@stocks.sum(&:cost_price)) if @stocks.present? %>
            </p>
          </div>

        </div>
      </div>

      <!-- Stock Portfolio Section -->
      <div class="mb-8">
        <div class="flex items-center justify-between mb-6">
          <div class="flex items-center gap-3">
            <div class="w-10 h-10 bg-green-100 rounded-lg flex items-center justify-center">
              <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-900">Your Stock Portfolio</h3>
          </div>
          
          <%= link_to intraday_stocks_path,
              class: "px-5 py-2.5 bg-green-600 text-white font-medium rounded-lg hover:bg-green-700 transition-all shadow-sm hover:shadow",
              style: "cursor: pointer;" do %>
            Trade Stocks
          <% end %>
        </div>

        <% if @stocks.present? %>
          <div class="overflow-hidden rounded-xl border border-gray-200">
            <table class="w-full">
              <thead class="bg-gray-50">
                <tr>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Symbol</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Company Name</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total Shares</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Total Cost</th>
                  <th class="px-6 py-4 text-left text-xs font-semibold text-gray-700 uppercase tracking-wider">Actions</th>
                </tr>
              </thead>
              <tbody class="divide-y divide-gray-200 bg-white">
                <% @stocks.each_with_index do |stock, index| %>
                  <tr class="hover:bg-gray-50 transition-colors duration-150">
                    <td class="px-6 py-4 whitespace-nowrap">
                      <span class="px-3 py-1 text-sm font-bold text-green-700 bg-green-100 rounded-lg"><%= stock.symbol %></span>
                    </td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium text-gray-900"><%= stock.company_name %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-700"><%= stock.shares %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-semibold text-gray-900"><%= number_to_currency(stock.cost_price) %></td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm">
                      <button class="text-green-600 hover:text-green-800 font-medium mr-3 px-3 py-1.5 rounded-lg hover:bg-green-50 transition-all">View</button>
                      <button class="text-blue-600 hover:text-blue-800 font-medium px-3 py-1.5 rounded-lg hover:bg-blue-50 transition-all">Trade</button>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          </div>
        <% else %>
          <div class="py-16 text-center bg-gray-50 rounded-xl border-2 border-dashed border-gray-300">
            <div class="w-16 h-16 bg-gray-100 rounded-full flex items-center justify-center mx-auto mb-4">
              <svg class="w-8 h-8 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 10h18M7 15h1m4 0h1m-7 4h12a3 3 0 003-3V8a3 3 0 00-3-3H6a3 3 0 00-3 3v8a3 3 0 003 3z"></path>
              </svg>
            </div>
            <p class="text-gray-900 font-semibold text-lg">No stocks in your portfolio yet</p>
            <p class="text-gray-600 text-sm mt-1">Start trading to build your investment portfolio</p>
          </div>
        <% end %>
      </div>

    </div>
    <% end %>

    <!-- Footer -->
    <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
      <p class="text-gray-500 text-sm text-center">
        &copy; 2025 Stock Trading App. All rights reserved.
      </p>
    </div>

  </div>
</div>
