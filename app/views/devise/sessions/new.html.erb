<body class="min-h-screen bg-gray-500 flex items-center justify-center px-4">
  <div class="bg-gray-700 bg-opacity-90 border-2 border-gray-400 p-8 rounded-lg shadow-lg w-full max-w-sm"> 
    <h3 class="text-3xl font-bold text-center mb-6 text-gray-800">Login</h3>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, "Email:", class: "block text-black-700 text-sm font-medium mb-2" %>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
            </svg>
          </span>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "pl-10 pr-3 py-2 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-gray-800 focus:border-transparent" %>
        </div>
      </div>

      <div class="mb-6">
        <%= f.label :password, class: "block text-black-700 text-sm font-medium mb-2" %>
        <div class="relative">
          <span class="absolute inset-y-0 left-0 flex items-center pl-3 text-gray-400">
            <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z"></path>
            </svg>
          </span>
          <%= f.password_field :password, autocomplete: "current-password", class: "pl-10 pr-3 py-2 border border-gray-300 rounded-md w-full focus:outline-none focus:ring-2 focus:ring-gray-800 focus:border-transparent" %>
        </div>
        <div class="text-right mt-2">
          <%= link_to "forgot password?", new_password_path(resource_name), class: "text-sm text-gray-600 hover:text-gray-900" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="mb-4 hidden"> <%# Hidden as per image, but good to keep if functionality is needed %>
          <%= f.check_box :remember_me, class: "mr-2" %>
          <%= f.label :remember_me, class: "text-sm text-gray-700" %>
        </div>
      <% end %>

      <div class="mb-4">
        <%= f.button type: "submit", class: "w-full bg-gray-800 text-white py-2 px-4 rounded-md hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-800 focus:ring-offset-2 flex items-center justify-center" do %>
          Log in
          <svg class="ml-2 h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"></path>
          </svg>
        <% end %>
      </div>
    <% end %>

    <div class="text-center mt-6">
      <p class="text-gray-700 text-sm mb-1">Not a member?</p>
      <%= link_to "Sign Up", new_registration_path(resource_name), class: "text-gray-800 font-medium hover:text-gray-900" %>
    </div>

    <% flash.each do |type, message| %>
      <div class="mt-4 p-3 rounded-md text-sm <% case type when 'alert' %>bg-red-100 text-red-700<% when 'notice' %>bg-green-100 text-green-700<% end %>">
        <%= message %>
      </div>
    <% end %>

  
  </div>
</body>