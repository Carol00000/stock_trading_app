<div style="min-height: 100vh; display: flex; align-items: center; justify-content: center; padding: 1rem; position: relative; overflow: hidden; background: linear-gradient(135deg, #1e1b4b 0%, #6b21a8 50%, #9f1239 100%);">
  
  <!-- Grid Background -->
  <div style="position: absolute; inset: 0; background-image: repeating-linear-gradient(0deg, rgba(255,255,255,0.03) 0px, transparent 1px, transparent 50px, rgba(255,255,255,0.03) 51px), repeating-linear-gradient(90deg, rgba(255,255,255,0.03) 0px, transparent 1px, transparent 50px, rgba(255,255,255,0.03) 51px);"></div>

  <!-- Ticker Tape -->
  <div style="position: absolute; top: 0; left: 0; right: 0; background: rgba(0,0,0,0.4); padding: 0.75rem 0; overflow: hidden; z-index: 20;">
    <div style="display: flex; animation: tickerScroll 25s linear infinite; white-space: nowrap;">
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">AAPL</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$150.25</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 2.5%</span>
      </span>
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">GOOGL</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$2,750</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 1.8%</span>
      </span>
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">MSFT</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$305.15</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 3.2%</span>
      </span>
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">TSLA</span>
        <span style="color: #f87171; font-weight: 600; font-size: 0.875rem;">$242.50</span>
        <span style="color: #f87171; font-size: 0.75rem;">▼ 1.3%</span>
      </span>
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">AMZN</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$178.90</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 0.8%</span>
      </span>
      <!-- Duplicates -->
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">AAPL</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$150.25</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 2.5%</span>
      </span>
      <span style="display: inline-flex; align-items: center; margin-right: 3rem; gap: 0.5rem;">
        <span style="color: white; font-weight: bold; font-size: 0.875rem;">GOOGL</span>
        <span style="color: #34d399; font-weight: 600; font-size: 0.875rem;">$2,750</span>
        <span style="color: #34d399; font-size: 0.75rem;">▲ 1.8%</span>
      </span>
    </div>
  </div>

  <!-- Charts -->
  <svg style="position: absolute; top: 8rem; left: 2.5rem; opacity: 0.35;" width="250" height="180">
    <line x1="30" y1="40" x2="30" y2="100" stroke="#10b981" stroke-width="2.5"/>
    <rect x="23" y="55" width="14" height="35" fill="#10b981"/>
    <line x1="70" y1="30" x2="70" y2="110" stroke="#ef4444" stroke-width="2.5"/>
    <rect x="63" y="60" width="14" height="40" fill="#ef4444"/>
    <line x1="110" y1="50" x2="110" y2="120" stroke="#10b981" stroke-width="2.5"/>
    <rect x="103" y="70" width="14" height="35" fill="#10b981"/>
    <line x1="150" y1="45" x2="150" y2="95" stroke="#10b981" stroke-width="2.5"/>
    <rect x="143" y="55" width="14" height="30" fill="#10b981"/>
    <line x1="190" y1="35" x2="190" y2="105" stroke="#ef4444" stroke-width="2.5"/>
    <rect x="183" y="65" width="14" height="30" fill="#ef4444"/>
  </svg>

  <svg style="position: absolute; top: 20%; right: 4rem; opacity: 0.3;" width="350" height="220">
    <polyline points="0,120 60,90 120,100 180,65 240,75 300,40 350,50" fill="none" stroke="#3b82f6" stroke-width="3"/>
    <polyline points="0,140 60,125 120,145 180,110 240,120 300,85 350,95" fill="none" stroke="#8b5cf6" stroke-width="3"/>
    <polyline points="0,160 60,150 120,170 180,140 240,155 300,120 350,130" fill="none" stroke="#10b981" stroke-width="3"/>
  </svg>

  <svg style="position: absolute; bottom: 6rem; right: 3rem; opacity: 0.35;" width="200" height="150">
    <line x1="25" y1="50" x2="25" y2="90" stroke="#10b981" stroke-width="2.5"/>
    <rect x="19" y="60" width="12" height="25" fill="#10b981"/>
    <line x1="60" y1="40" x2="60" y2="100" stroke="#10b981" stroke-width="2.5"/>
    <rect x="54" y="55" width="12" height="35" fill="#10b981"/>
    <line x1="95" y1="45" x2="95" y2="95" stroke="#ef4444" stroke-width="2.5"/>
    <rect x="89" y="65" width="12" height="25" fill="#ef4444"/>
    <line x1="130" y1="35" x2="130" y2="85" stroke="#10b981" stroke-width="2.5"/>
    <rect x="124" y="50" width="12" height="30" fill="#10b981"/>
  </svg>

  <svg style="position: absolute; bottom: 8rem; left: 4rem; opacity: 0.3;" width="300" height="180">
    <polyline points="0,100 50,80 100,95 150,60 200,70 250,45 300,55" fill="none" stroke="#06b6d4" stroke-width="3"/>
    <polyline points="0,120 50,110 100,125 150,95 200,105 250,75 300,85" fill="none" stroke="#f59e0b" stroke-width="3"/>
  </svg>

  <!-- Floating Numbers -->
  <div style="position: absolute; top: 35%; left: 18%; color: #34d399; font-weight: bold; font-size: 3rem; opacity: 0.35; animation: floatAnim 4s ease-in-out infinite;">+2.5%</div>
  <div style="position: absolute; bottom: 35%; right: 18%; color: #f87171; font-weight: bold; font-size: 2.5rem; opacity: 0.35; animation: floatAnim 5s ease-in-out infinite; animation-delay: 1s;">-1.2%</div>
  <div style="position: absolute; top: 55%; left: 25%; color: #3b82f6; font-weight: bold; font-size: 2rem; opacity: 0.35; animation: floatAnim 6s ease-in-out infinite; animation-delay: 2s;">$150.25</div>

  <!-- Login Card -->
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md" style="position: relative; z-index: 30;">
    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Login</h3>
    
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mb-4">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      
      <div class="mb-4">
        <%= f.label :password, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.password_field :password, autocomplete: "current-password", class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>
      
      <div class="flex items-center justify-end mb-6">
        <%= link_to "Forgot password?", new_password_path(resource_name), class: "text-sm text-blue-600 hover:text-blue-700" %>
      </div>
      
      <div class="mb-6">
        <%= f.button type: "submit", class: "w-full bg-blue-600 text-white py-2.5 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" do %>
          Log in
        <% end %>
      </div>
    <% end %>
    
    <div class="text-center text-sm">
      <span class="text-gray-600">Not a member?</span>
      <%= link_to "Sign up", new_registration_path(resource_name), class: "text-blue-600 font-medium hover:text-blue-700 ml-1" %>
    </div>
    
    <% flash.each do |type, message| %>
      <div class="mt-4 p-3 rounded-md text-sm <%= type == 'alert' ? 'bg-red-50 text-red-700 border border-red-200' : 'bg-green-50 text-green-700 border border-green-200' %>">
        <%= message %>
      </div>
    <% end %>
  </div>
</div>

<style>
  @keyframes tickerScroll {
    0% { transform: translateX(0); }
    100% { transform: translateX(-50%); }
  }

  @keyframes floatAnim {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-30px); }
  }

  @media (max-width: 1024px) {
    svg, div[style*="floatAnim"] {
      display: none !important;
    }
  }
</style>
