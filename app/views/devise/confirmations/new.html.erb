<div class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">
    <h3 class="text-2xl font-semibold text-gray-900 mb-2">Resend confirmation instructions</h3>
    <p class="text-sm text-gray-600 mb-6">Didn't receive a confirmation email? We'll send it again</p>

    <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="mb-6">
        <%= f.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= f.email_field :email,
              autofocus: true,
              autocomplete: "email",
              value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email),
              class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= f.submit "Resend confirmation instructions",
              aria: { label: "Resend confirmation instructions" },
              class: "w-full bg-blue-600 text-white py-2.5 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
      </div>
    <% end %>

    <div class="text-center text-sm text-gray-600">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>