<div class="m-0 p-0 min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mx-auto">


    <!-- Header -->
    <div class="flex flex-col md:flex-row md:items-center md:justify-between mb-8 mx-4 sm:mx-6 lg:mx-8 mt-4 sm:mt-6 lg:mt-8 p-8 sm:p-10 lg:p-12 bg-white rounded-lg border-2 text-sm font-medium  ">

      <!-- Stock Trading + Welcome -->
      <div class="mb-4 md:mb-0 ">
        <h1 class="text-2xl font-bold text-black-900 sm:text-3xl">
          Stock Trading App
        </h1>
        <p class="mt-1 text-sm text-black-500">
          Welcome <%= current_user.first_name.upcase %>
        </p>
      </div>

      <!-- Home + Logout Buttons -->
      <div class="flex flex-col sm:flex-row space-y-2 sm:space-y-0 sm:space-x-3">

        <!-- Home Button -->
        <%= button_to root_path, method: :get,
            class: "inline-flex items-center justify-center px-4 py-2 border-2 border-black-300 rounded-md shadow-sm text-sm font-medium text-black-600 bg-white hover:bg-gray-50 hover:border-gray-400 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-gray-500 transition-colors duration-200 w-full sm:w-auto",
            style: "cursor: pointer;" do %>
          <svg class="-ml-1 mr-2 h-5 w-5 text-black-500 flex-shrink-0" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6"/>
          </svg>
          Home
        <% end %>

        <!-- Logout Button -->
        <% if user_signed_in? %>
          <%= button_to destroy_user_session_path, method: :delete,
              class: "inline-flex items-center justify-center px-4 py-2 border-2 rounded-md shadow-sm text-sm font-medium bg-red-500 hover:bg-red-600 hover:border-red-600 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 transition-colors duration-200 w-full sm:w-auto",
              style: "cursor: pointer;" do %>
            <svg class="-ml-1 mr-2 h-5 w-5 flex-shrink-0" style="color: white;" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a2 2 0 01-2 2H5a2 2 0 01-2-2V7a2 2 0 012-2h6a2 2 0 012 2v1" />
            </svg>
            Logout
          <% end %>
        <% end %>

      </div>
    </div>


    <!-- Main Section/Link-->
    <div class="rounded-lg p-8 sm:p-10 lg:p-12 mx-4 sm:mx-6 lg:mx-8 min-h-[60vh] border-2  shadow-md">
      <div class="grid grid-cols-1 gap-6">
        <% if current_user.admin? %>
          <%= link_to 'Admin Transactions', admin_transactions_path, class: "block w-full p-8 bg-gray-50 rounded-lg shadow-md hover:bg-gray-100 hover:shadow-lg text-center text-black-600 font-semibold text-lg transition-all duration-200 border-2 border-black-300 rounded-md" %>
          <%= link_to 'Users', admin_users_path, class: "block w-full p-8 bg-gray-50 rounded-lg shadow-md hover:bg-gray-100 hover:shadow-lg text-center text-black-600 font-semibold text-lg transition-all duration-200 border-2 border-black-300 rounded-md" %>
        <% end %>
      </div>
    </div>


    <!-- Footer -->
    <footer class="mt-auto text-center text-lg py-4">
      &copy; 2025 Stock Trading App. All rights reserved.
    </footer>

  </div>
</div>