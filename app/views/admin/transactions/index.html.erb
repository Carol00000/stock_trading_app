<div class="min-h-screen bg-gradient-to-br from-gray-50 to-gray-100 p-4">
  <div class="w-full max-w-6xl mx-auto bg-white rounded-2xl shadow-xl overflow-hidden">
    
    <div class="p-8">
      
      <!-- Back Button -->
      <div class="mb-6">
        <%= link_to root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-700 transition-colors font-medium" do %>
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
          </svg>
          Back to Home
        <% end %>
      </div>

      <!-- Header -->
      <div class="mb-8">
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 bg-blue-100 rounded-xl flex items-center justify-center">
            <svg class="w-6 h-6 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <div>
            <h2 class="text-2xl font-bold text-gray-900">User Transaction History</h2>
            <p class="text-gray-600 text-sm">View and manage all platform transactions</p>
          </div>
        </div>
      </div>

      <!-- Transactions Table Section -->
      <% if @transactions.any? %>
        <div class="bg-gray-50 rounded-xl p-6 border border-gray-200 mb-8">
          <div class="bg-white rounded-lg overflow-hidden border border-gray-200">
            <div class="overflow-x-auto">
              <table class="w-full min-w-[640px] text-sm text-left text-gray-700">
                <thead class="bg-gray-50 border-b border-gray-200">
                  <tr>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Transaction ID</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">User</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Action</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Company</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Shares</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Price</th>
                    <th class="px-6 py-3 text-sm font-semibold text-gray-700">Date</th>
                  </tr>
                </thead>
                <tbody class="divide-y divide-gray-200">
                  <% @transactions.each do |transaction| %>
                    <tr class="hover:bg-gray-50 transition-colors">
                      <td class="px-6 py-4 text-gray-900 font-medium"><%= transaction.id %></td>
                      <td class="px-6 py-4 text-gray-900"><%= transaction.user.email %></td>
                      <td class="px-6 py-4">
                        <span class="px-3 py-1 text-xs font-semibold rounded-lg <%= transaction.action_type.downcase == 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                          <%= transaction.action_type.capitalize %>
                        </span>
                      </td>
                      <td class="px-6 py-4 text-gray-900"><%= transaction.company_name %></td>
                      <td class="px-6 py-4 text-gray-900 font-semibold"><%= transaction.shares %> shares</td>
                      <td class="px-6 py-4 text-blue-600 font-semibold">$<%= number_with_delimiter(transaction.total_price) %></td>
                      <td class="px-6 py-4 text-gray-600"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="bg-gray-50 rounded-xl p-12 border border-gray-200 mb-8">
          <div class="text-center">
            <div class="text-gray-400 mb-4">
              <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
              </svg>
            </div>
            <h3 class="text-base font-semibold text-gray-900 mb-1">No transactions yet</h3>
            <p class="text-sm text-gray-600">Transaction history will appear here once trading begins.</p>
          </div>
        </div>
      <% end %>

    </div>

    <!-- Footer -->
    <div class="bg-gray-50 px-8 py-4 border-t border-gray-200">
      <p class="text-gray-500 text-sm text-center">
        &copy; 2025 Stock Trading App. All rights reserved.
      </p>
    </div>

  </div>
</div>