<div class="m-0 p-0 min-h-screen bg-gray-50 py-8">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <div class="mb-4 md:mb-0">
      <%= link_to root_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Home
      <% end %>
    </div>

    <!-- Transactions Section -->
    <div class="bg-white rounded-lg border-2 shadow p-6 sm:p-8 mb-8">
      <div class="text-center mb-6">
        <h2 class="text-xl font-semibold text-gray-900">User Transaction History</h2>
      </div>

      <!-- Transaction Table -->
      <% if @transactions.any? %>
        <div class="overflow-x-auto">
          <table class="w-full min-w-[640px] text-sm text-left text-gray-700">
            <thead class="border-b border-gray-200">
              <tr>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Transaction ID</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">User</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Type</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Buy/Sell</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Action/Company</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Shares</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Price</th>
                <th class="py-3 px-4 uppercase text-xs font-medium text-gray-500">Date</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-100">
              <% @transactions.each do |transaction| %>
                <tr class="hover:bg-gray-50 transition-colors">
                  <td class="py-4 px-4 font-medium text-gray-900"><%= transaction.id %></td>
                  <td class="py-4 px-4 font-medium text-gray-900"><%= transaction.user.email %></td>
                  <td class="py-4 px-4">
                    <% if transaction.admin_action? %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full bg-blue-100 text-blue-800">
                        Admin Action
                      </span>
                    <% else %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full bg-green-100 text-green-800">
                        Stock Trade
                      </span>
                    <% end %>
                  </td>
                  <td class="py-4 px-4">
                    <% if transaction.admin_action? %>
                      <span class="text-gray-500">N/A</span>
                    <% else %>
                      <span class="px-2 py-1 text-xs font-medium rounded-full <%= transaction.action_type.downcase == 'buy' ? 'bg-green-100 text-green-800' : 'bg-red-100 text-red-800' %>">
                        <%= transaction.action_type.capitalize %>
                      </span>
                    <% end %>
                  </td>
                  <td class="py-4 px-4 font-medium text-gray-900">
                    <% if transaction.admin_action? %>
                      <%= transaction.action_display_name %>
                    <% else %>
                      <%= transaction.company_name %>
                    <% end %>
                  </td>
                  <td class="py-4 px-4 font-bold text-gray-900">
                    <% if transaction.admin_action? %>
                      <%= transaction.target_user&.email || 'N/A' %>
                    <% else %>
                      <%= transaction.shares %> shares
                    <% end %>
                  </td>
                  <td class="py-4 px-4 font-bold text-blue-600">
                    <% if transaction.admin_action? %>
                      <%= transaction.description %>
                    <% else %>
                      $<%= number_with_delimiter(transaction.total_price) %>
                    <% end %>
                  </td>
                  <td class="py-4 px-4 text-gray-500"><%= transaction.created_at.strftime("%Y-%m-%d %H:%M:%S") %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-12">
          <div class="text-gray-400 mb-4">
            <svg class="mx-auto h-12 w-12" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
            </svg>
          </div>
          <h3 class="text-sm font-medium text-gray-900 mb-1">No transactions yet</h3>
          <p class="text-sm text-gray-500">Transaction history will appear here once admin actions or trading begins.</p>
        </div>
      <% end %>
    </div>
  </div>
</div>