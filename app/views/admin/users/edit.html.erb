<body class="min-h-screen flex items-center justify-center px-4">
  <div class="bg-white p-8 rounded-lg shadow-lg w-full max-w-sm border-2 p-8 rounded-lg shadow-lg w-full max-w-sm">

    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_user_path(@user), class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to User
      <% end %>
    </div>

    <!-- Title -->
    <h1 class="text-3xl font-bold text-gray-800 text-center mb-8">Update User Details</h1>

    <!-- Update Form -->
    <%= form_with model: [:admin, @user], class: "space-y-6" do |form| %>

      <div>
        <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" %>
      </div>

      <div>
        <%= form.label :balance, class: "block text-sm font-medium text-gray-700 mb-2" %>
        <%= form.text_field :balance, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-gray-500 focus:border-transparent" %>
      </div>

      <div>
<%= form.submit "Submit", class: "w-full bg-green-500 text-black py-2 px-4 rounded-md border-2 font-medium focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 flex items-center justify-center", style: "cursor: pointer" %>      </div>

    <% end %>

  </div>
</body>
