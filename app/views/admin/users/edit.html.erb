<div class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">

    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_user_path(@user), class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to User
      <% end %>
    </div>

    <!-- Title -->
    <h3 class="text-2xl font-semibold text-gray-900 mb-6">Update User Details</h3>

    <!-- Update Form -->
    <%= form_with model: [:admin, @user] do |form| %>

      <div class="mb-4">
        <%= form.label :email, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.email_field :email, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="mb-4">
        <%= form.label :first_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :first_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="mb-4">
        <%= form.label :last_name, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :last_name, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= form.label :balance, class: "block text-sm font-medium text-gray-700 mb-1" %>
        <%= form.text_field :balance, class: "w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent" %>
      </div>

      <div class="mb-6">
        <%= form.submit "Submit", class: "w-full bg-blue-600 text-white py-2.5 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors" %>
      </div>

    <% end %>

  </div>
</div>