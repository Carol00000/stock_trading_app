<div class="min-h-screen flex items-center justify-center p-4">
  <div class="bg-white p-8 rounded-lg shadow-md w-full max-w-md">

    <!-- Back Button -->
    <div class="mb-6">
      <%= link_to admin_users_path, class: "inline-flex items-center text-blue-600 hover:text-blue-800 transition-colors duration-200" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
        </svg>
        Back to Users
      <% end %>
    </div>

    <!-- Title -->
    <h3 class="text-2xl font-semibold text-gray-900 mb-6">User Details</h3>

    <!-- User Details -->
    <div class="space-y-4 mb-6">
      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-700">Email:</span>
        <span class="text-sm text-gray-900 font-semibold"><%= @user.email %></span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-700">First Name:</span>
        <span class="text-sm text-gray-900 font-semibold"><%= @user.first_name %></span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-700">Last Name:</span>
        <span class="text-sm text-gray-900 font-semibold"><%= @user.last_name %></span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-700">Balance:</span>
        <span class="text-green-600 font-bold"><%= number_to_currency(@user.balance) %></span>
      </div>

      <div class="flex justify-between items-center">
        <span class="text-sm font-medium text-gray-700">Account Status:</span>
        <span class="px-2 py-1 rounded text-xs font-medium
          <%= @user.account_status == 'approved' ? 'bg-green-100 text-green-800' :
              @user.account_status == 'pending' ? 'bg-yellow-100 text-yellow-800' :
              'bg-red-100 text-red-800' %>">
          <%= @user.account_status.capitalize %>
        </span>
      </div>
    </div>

    <!-- Approve/Deny -->
    <% if @user.account_status.in?(%w[pending denied]) %>
      <div class="bg-gray-50 p-4 rounded-lg mb-6">
        <h4 class="text-sm font-medium text-gray-900 mb-4">Account Status Actions</h4>

        <div class="flex flex-col gap-3">
          <!-- Approve -->
          <%= button_to approve_admin_user_path(@user),
              method: :patch,
              data: { turbo_confirm: "Are you sure you want to approve this user?" },
              class: "w-full bg-green-600 text-white py-2.5 px-4 rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors flex items-center justify-center font-medium" do %>
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
            </svg>
            Approve User
          <% end %>

          <% if @user.account_status == 'pending' %>
            <!-- Deny -->
            <%= button_to deny_admin_user_path(@user),
                method: :delete,
                data: { turbo_confirm: "Are you sure you want to reject this user?" },
                class: "w-full bg-red-500 text-white py-2.5 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors flex items-center justify-center font-medium" do %>
              <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
              </svg>
              Deny User
            <% end %>
          <% end %>
        </div>
      </div>
    <% end %>

    <!-- Divider -->
    <div class="border-t border-gray-200 my-6"></div>

    <!-- Edit/Delete -->
    <div class="space-y-3">
      
      <!-- Edit Button -->
      <%= link_to edit_admin_user_path(@user), class: "w-full bg-blue-600 text-white py-2.5 px-4 rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors flex items-center justify-center font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"/>
        </svg>
        Edit User
      <% end %>

      <!-- Delete Button -->
      <%= link_to admin_user_path(@user), data: { turbo_method: :delete, turbo_confirm: "Delete user?" }, class: "w-full bg-red-500 text-white py-2.5 px-4 rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors flex items-center justify-center font-medium" do %>
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"/>
        </svg>
        Delete User
      <% end %>
    </div>

  </div>
</div>